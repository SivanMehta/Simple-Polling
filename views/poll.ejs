<html>
    <header>
        <% include partials/header %>
        <script type="text/javascript" src = "/js/page.js"></script>
    </header>
<body>
    <div class=  "container">
        <div class = "row">
            <div class = "col s4">
                <h1><%= poll_name %></h1>
                <h4>(<%= total_votes %> votes)</h4>
            </div>
            <div class = "col s6">

                <a class="btn green" id = "create_new_entry"><i class="material-icons left">add</i>Add Option</a>

                <ul>
                    <% Object.keys(poll_data).forEach(  function(item){ %>

                        <li>
                            <%= item %>: <%= poll_data[item] %>
                            <% if(poll_data[item] == max_votes) { %>
                                
                                <b>WINNER!</b>
                                
                            <% } %>

                            <span class="progress">
                              <span class="determinate" style="width: <%= poll_data[item]/max_votes*100 %>%"></span>
                            </span>
                        </li>

                    <% }); %>
                </ul>
                
            </div>
        </div>
    </div>
</body>
</html>